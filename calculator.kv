<MyOwnButton@Button>
    size_hint: (.2, .2)
    font_size: 32
    background_color: (57/255, 157/255, 157/255, 1)
<Container>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: '0'
            halign: 'right'
            font_size: 60
            size_hint: (1, .15)
            multiline: False
            hint_text: 'Введите число'
            input_filter: 'int'
            input_type: 'number'
        
        GridLayout:
            cols: 4
            rows: 5

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: '%'
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: 'C'
                on_press:
                    root.clear_button()

            Button:
                id: clear_button
                size_hint: (.2, .2)
                font_size: 32
                text: u'\u00AB'
                on_press:
                    root.remove()
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: '/'
                on_press:
                    root.choose_of_sign('/')
            
            MyOwnButton:

                text: '7'
                on_press:
                    root.button_press(7)
            
            MyOwnButton:
                text: '8'
                on_press:
                    root.button_press(8)

            MyOwnButton:
                text: '9'
                on_press:
                    root.button_press(9)
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: 'x'
                on_press:
                    root.choose_of_sign('*')
            
            MyOwnButton:
                text: '4'
                on_press:
                    root.button_press(4)
            
            MyOwnButton:
                text: '5'
                on_press:
                    root.button_press(5)

            MyOwnButton:
                text: '6'
                on_press:
                    root.button_press(6)
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: '-'
                on_press:
                    root.choose_of_sign('-')

            
            MyOwnButton:
                text: '1'
                on_press:
                    root.button_press(1)
            
            MyOwnButton:
                text: '2'
                on_press:
                    root.button_press(2)

            MyOwnButton:
                text: '3'
                on_press:
                    root.button_press(3)
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: '+'
                on_press:
                    root.choose_of_sign('+')
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: '+/-'
                on_press:
                    root.pos_sign()
            
            MyOwnButton:
                text: '0'
                on_press:
                    root.button_press(0)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: '.'
                on_press:
                    root.dot()
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: '='
                on_press:
                    root.equalf()

            
            

            
            
            

